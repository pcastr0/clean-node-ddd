{
  "name": "clean-node-ddd",
  "version": "1.0.0",
  "description": "A Node REST API Boilerplate",
  "main": "index.js",
  "engines": {
    "node": ">=14.15.4"
  },
  "scripts": {
    "start": "cross-env NODE_PATH=. NODE_ENV=development node index.js",
    "dev": "cross-env NODE_PATH=. NODE_ENV=development nodemon",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:features",
    "test:unit": "cross-env NODE_PATH=. NODE_ENV=test mocha --config test/.mocharc.unit.js",
    "test:features": "cross-env NODE_PATH=. NODE_ENV=test mocha --config test/.mocharc.features.js",
    "coverage": "cross-env NODE_PATH=. NODE_ENV=test nyc mocha --config test/.mocharc.unit.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trickoooo/clean-node-ddd.git"
  },
  "keywords": [
    "node",
    "express"
  ],
  "author": "Patrick Castro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trickoooo/clean-node-ddd/issues"
  },
  "homepage": "https://github.com/trickoooo/clean-node-ddd#readme",
  "dependencies": {
    "awilix": "^4.3.1",
    "awilix-express": "^3.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.3.3",
    "http-status": "^1.5.0",
    "log4js": "^6.3.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-change": "^2.1.2",
    "dirty-chai": "^2.0.1",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0"
  }
}
